<div class="mdl-cell mdl-cell--4-col"></div>
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">Log in </h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email, class: 'mdl-textfield__label' %><br />
        <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password, class: 'mdl-textfield__label' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="mdl-checkbox mdl-js-checkbox">
          <%= f.check_box :remember_me, class: 'mdl-checkbox__input' %>
          <%= f.label :remember_me, class: 'mdl-checkbox__label' %>
        </div>
      <% end -%>

      <div class="actions mdl-typography--display-3">
        <%= f.submit "Log in", class: 'mdl-button mdl-js-button mdl-button--accent' %>
      </div>
    <% end %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <%= render "broker/users/shared/links" %>
  </div>
</div>
<div class="mdl-cell mdl-cell--4-col"></div>
