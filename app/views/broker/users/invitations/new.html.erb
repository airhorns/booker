<div class="mdl-cell mdl-cell--4-col"></div>
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--4-col">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">Invite a new staff member</h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
      <%= devise_error_messages! %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= f.label field, class: 'mdl-textfield__label' %>
          <%= f.text_field field, autofocus: true, class: 'mdl-textfield__input' %>
        </div>
      <% end -%>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :first_name, class: 'mdl-textfield__label' %>
        <%= f.text_field :first_name, class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :last_name, class: 'mdl-textfield__label' %>
        <%= f.text_field :last_name, class: 'mdl-textfield__input' %>
      </div>

      <div class="mdl-checkbox mdl-js-checkbox">
        <%= f.label :is_owner, "Make new user an owner?", class: 'mdl-checkbox__label' %>
        <%= f.check_box :is_owner, class: 'mdl-checkbox__input' %>
      </div>

      <div class="actions mdl-typography--display-3">
        <%= f.submit "Send invite", class: 'mdl-button mdl-js-button mdl-button--accent' %>
      </div>
    <% end %>
  </div>
</div>
<div class="mdl-cell mdl-cell--4-col"></div>
